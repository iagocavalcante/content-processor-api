# Application
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info

# Database
DATABASE_URL=postgres://user:password@localhost:5432/content_processor

# Queue Configuration
QUEUE_POLL_INTERVAL=1000
QUEUE_STAGE_INTERVAL=1000
QUEUE_SHUTDOWN_GRACE_PERIOD=15000

# Queue Limits
QUEUE_IMAGES_LIMIT=10
QUEUE_DOCUMENTS_LIMIT=5
QUEUE_EMAILS_LIMIT=20
QUEUE_WEBHOOKS_LIMIT=15
QUEUE_EXPORTS_LIMIT=3
QUEUE_DEFAULT_LIMIT=5

# Worker Configuration
WORKER_IMAGE_TIMEOUT=300000
WORKER_PDF_TIMEOUT=180000
WORKER_EMAIL_TIMEOUT=30000
WORKER_WEBHOOK_TIMEOUT=30000
WORKER_EXPORT_TIMEOUT=600000

# Plugins
LIFELINE_INTERVAL=60000
LIFELINE_RESCUE_AFTER=300
PRUNER_INTERVAL=300000
PRUNER_MAX_AGE=604800

# External Services
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
S3_BUCKET=content-processor-uploads

SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your_sendgrid_api_key
SMTP_FROM=noreply@example.com

# Security
API_KEY_HEADER=X-API-Key
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
